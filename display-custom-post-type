<?php 
$query = new WP_Query( array( 'job_posting_type' => 'lowongan_kerja' ) );                  

if ( $query->have_posts() ) : ?>
    <?php while ( $query->have_posts() ) : $query->the_post(); ?>  
        <div>
            <h2><?php the_title(); ?></h2>
            <?php the_content(); ?>
        </div>
  <?php endwhile; wp_reset_postdata(); ?>
<!-- show pagination here -->
<?php else : ?>
    <!-- show 404 error here -->
<?php endif; ?>
